{
    "builders": [{
        "type": "docker",
        "image": "python",
        "commit": true,
        "changes": [
            "WORKDIR /opt/restic-metrics",
            "EXPOSE 8000",
            "ENTRYPOINT /usr/local/bin/python /opt/restic-metrics/app.py"
        ]
    }],
    "provisioners": [{
        "type": "file",
        "source": "restic-metrics",
        "destination": "/opt"
    },{
        "type": "file",
        "source": "Pipfile",
        "destination": "/opt/restic-metrics/"
    },{
        "type": "shell",
        "inline": [
            "cd /opt/restic-metrics",
            "pip install pipenv",
            "pipenv lock",
            "cat Pipfile",
            "cat Pipfile.lock",
            "pipenv install --deploy --system"
        ]
    }],
    "post-processors": [{
        "type": "docker-tag",
        "repository": "tarioch/restic-metrics"
    }]
}

{
    "builders": [{
        "type": "docker",
        "image": "python",
        "commit": true
    }],
    "provisioners": [{
        "type": "file",
        "source": "restic-metrics",
        "destination": "/opt"
    }, {
        "type": "shell",
        "inline": [
            "cd /opt/restic-metrics",
            "pip install pipenv",
            "pipenv lock",
            "pipenv install --deploy --system"
        ]
    }],
    "post-processors": [{
        "type": "docker-tag",
        "repository": "tarioch/restic-metrics"
    }]
}
